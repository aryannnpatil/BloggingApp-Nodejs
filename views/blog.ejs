<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title><%= blog.title %> - Typora</title>
    <style>
      .blog-header {
        padding: 3rem 0 2rem;
        background: white;
        margin-top: 0;
      }

      .blog-title {
        font-family: 'Playfair Display', serif;
        font-size: 3rem;
        font-weight: 900;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        color: var(--dark);
      }

      .blog-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #e2e8f0;
      }

      .author-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid var(--primary);
      }

      .author-info {
        flex: 1;
      }

      .author-name {
        font-weight: 700;
        color: var(--dark);
        font-size: 1.1rem;
      }

      .blog-date {
        color: var(--gray);
        font-size: 0.9rem;
      }

      .blog-cover {
        width: 100%;
        max-height: 500px;
        object-fit: cover;
        border-radius: 16px;
        margin-bottom: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      }

      .blog-content {
        background: white;
        padding: 3rem 0;
      }

      .blog-body {
        font-size: 1.15rem;
        line-height: 1.8;
        color: #334155;
        white-space: pre-wrap;
        font-family: 'Inter', sans-serif;
      }

      .comments-section {
        background: white;
        padding: 3rem 0;
        border-top: 1px solid #e2e8f0;
      }

      .comments-header {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 2rem;
        color: var(--dark);
      }

      .comment-form {
        background: var(--light);
        padding: 2rem;
        border-radius: 16px;
        margin-bottom: 3rem;
      }

      .comment-input {
        width: 100%;
        padding: 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 1rem;
        margin-bottom: 1rem;
        font-family: 'Inter', sans-serif;
        background: white;
      }

      .comment-input:focus {
        outline: none;
        border-color: var(--primary);
      }

      .comments-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .comment-card {
        background: var(--light);
        padding: 1.5rem;
        border-radius: 12px;
        border-left: 4px solid var(--primary);
      }

      .comment-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
      }

      .comment-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: 2px solid var(--primary);
      }

      .comment-author {
        font-weight: 700;
        color: var(--dark);
      }

      .comment-content {
        color: #475569;
        white-space: pre-wrap;
        line-height: 1.6;
      }

      .no-comments {
        text-align: center;
        padding: 3rem;
        color: var(--gray);
      }

      @media (max-width: 768px) {
        .blog-title {
          font-size: 2rem;
        }

        .blog-body {
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="blog-header">
      <div class="container">
        <h1 class="blog-title"><%= blog.title %></h1>
        <div class="blog-meta">
          <img src="<%= blog.createdBy.profileImageUrl %>" class="author-avatar" alt="<%= blog.createdBy.fullName %>" />
          <div class="author-info">
            <div class="author-name"><%= blog.createdBy.fullName %></div>
            <div class="blog-date"><%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
          </div>
        </div>
      </div>
    </div>

    <div class="blog-content">
      <div class="container">
        <img src="<%= blog.coverImageUrl %>" class="blog-cover" alt="<%= blog.title %>" />
        <div class="blog-body"><%= blog.body %></div>
      </div>
    </div>

    <div class="comments-section">
      <div class="container">
        <h2 class="comments-header">Comments (<%= comments.length %>)</h2>
        
        <% if (locals.user) { %>
          <form action="/blog/comment/<%= blog._id %>" method="post" class="comment-form">
            <input
              type="text"
              name="content"
              class="comment-input"
              placeholder="Share your thoughts..."
              required
            />
            <button class="btn btn-primary" type="submit">Post Comment</button>
          </form>
        <% } else { %>
          <div class="comment-form" style="text-align: center;">
            <p style="margin-bottom: 1rem; color: var(--gray);">Sign in to leave a comment</p>
            <a href="/user/signin" class="btn btn-primary">Sign In</a>
          </div>
        <% } %>

        <% if (comments.length > 0) { %>
          <div class="comments-list">
            <% comments.forEach(comment => { %>
              <div class="comment-card">
                <div class="comment-header">
                  <img src="<%= comment.createdBy.profileImageUrl %>" class="comment-avatar" alt="<%= comment.createdBy.fullName %>" />
                  <span class="comment-author"><%= comment.createdBy.fullName %></span>
                </div>
                <div class="comment-content"><%= comment.content %></div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="no-comments">
            <p>No comments yet. Be the first to share your thoughts!</p>
          </div>
        <% } %>
      </div>
    </div>

    <%- include('./partials/scripts.ejs')%>
  </body>
</html>